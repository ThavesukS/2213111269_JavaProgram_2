import javax.swing.*;

public class Lab605 {


	public static void main(String[] args) {
		int[] number = new int[5];

		for (int i = 0; i < number.length; i++) {
			JOptionPane.showInputDialog("Input number " + (i + 1) + " :");
		}

		ShowEven(number);
		ShowOdd(number);

	}

	public static void ShowEven(int[] num) {
		String msg = " ";
		for (int i = 0; i < num.length; i++) {
			if (num[i] % 2 == 0) {
				msg += num[i];
				msg += " ";
			}

		}
		JOptionPane.showMessageDialog(null, "list of even number:\n" + msg);
	}

	public static void ShowOdd(int[] num) {
		String msg = " ";
		for (int i = 0; i < num.length; i++) {
			if (num[i] % 2 != 0) {
				msg += num[i] + " ";
			}

		}
		JOptionPane.showMessageDialog(null, "list of odd number:\n" + msg);
	}

}
